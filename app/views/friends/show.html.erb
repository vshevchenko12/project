<div class="jumbotron">
  <div id="friends">
    <h1 class="display-4">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h1>
    <p class="lead"><%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twiter %>
    </p>
    <hr class="my-4">
    <div class="btn-group mr-2">
      <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-warning' %>
    </div>
    <div class="btn-group mr-2">
      <%= button_to "Delete", @friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'btn btn-danger' %>
    </div>
    <div class="btn-group mr-2">
      <%= link_to "Back", friends_path, class:'btn btn-dark' %>
    </div>
  </div>
</div>
